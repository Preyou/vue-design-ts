{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    // "declarationDir": "./types",
    "declarationMap": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    // 输出目录
    "outDir": "./lib",
    // 是否包含可以用于 debug 的 sourceMap
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "src/lib/*"
      ]
    },
  },
  "include": [
    "src/auto-import.d.ts",
    "components.d.ts",
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx",
    "src/lib/**/*.vue"
  ],
  "exclude": [
    "src/components/**/*.ts",
    "src/components/**/*.vue",
    "src/components/**/*.tsx",
    "src/views/**/*.ts",
    "src/views/**/*.vue",
    "src/views/**/*.tsx",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}